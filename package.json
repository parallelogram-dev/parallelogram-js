{
    "name": "@peptolab/parallelogram",
    "version": "1.0.24",
    "description": "A lightweight, enhancement-first JavaScript framework for progressive web applications",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.umd.js",
    "scripts": {
        "build": "rollup -c && npm run build-css",
        "build-css": "npm run compile-scss && npm run copy-css && npm run minify-css",
        "compile-scss": "sass src/styles:dist/styles --no-source-map",
        "copy-css": "mkdir -p dist/styles/components && cp src/styles/*.css dist/styles/ 2>/dev/null || true",
        "minify-css": "find dist/styles -name '*.css' ! -name '*.min.css' -exec sh -c 'cleancss -o \"${1%.css}.min.css\" \"$1\"' _ {} \\;",
        "copy-to-demo": "mkdir -p demo/dist/styles/components && cp dist/*.min.js demo/dist/ && cp dist/*.min.css demo/dist/ 2>/dev/null || true && cp dist/styles/*.min.css demo/dist/styles/ 2>/dev/null || true && cp dist/styles/components/*.min.css demo/dist/styles/components/ 2>/dev/null || true",
        "demo": "npm run build && npm run copy-to-demo && serve demo -l 3000",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "parallelogram-js",
        "framework",
        "progressive-enhancement"
    ],
    "license": "MIT",
    "sideEffects": false,
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "require": "./dist/index.cjs",
            "browser": "./dist/index.umd.js"
        },
        "./components/*": {
            "import": "./dist/components/*.js"
        },
        "./styles": "./dist/styles/index.min.css"
    },
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "directories": {
        "test": "test"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.3",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "clean-css": "^5.3.3",
        "clean-css-cli": "^5.6.3",
        "cssnano": "^7.1.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "rollup": "^4.12.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-delete": "^3.0.1",
        "rollup-plugin-postcss": "^4.0.2",
        "sass": "^1.92.1",
        "serve": "^14.2.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/parallelogram-dev/parallelogram-js.git"
    },
    "author": "Parallelogram"
}
