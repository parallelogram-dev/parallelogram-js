{
  "name": "@parallelogram-js/core",
  "version": "0.2.7",
  "description": "A lightweight, enhancement-first JavaScript framework for progressive web applications",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c && npm run build-css",
    "build-css": "npm run compile-scss && npm run minify-css",
    "compile-scss": "sass src/styles/framework/index.scss:dist/styles/index.css --no-source-map --style=expanded",
    "compile-scss-components": "sass src/styles/framework/components:dist/styles/components --no-source-map --style=expanded",
    "minify-css": "cleancss -o dist/styles/index.min.css dist/styles/index.css",
    "build-all-css": "npm run compile-scss && npm run compile-scss-components && npm run minify-css",
    "build-demo": "rollup -c rollup.demo.config.js",
    "build-demo-css": "sass src/styles/demo/index.scss:demo/dist/parallelogram-demo.css --no-source-map --style=expanded && cleancss -o demo/dist/parallelogram-demo.min.css demo/dist/parallelogram-demo.css",
    "demo": "npm run build-demo && npm run build-demo-css && serve demo -l 3000",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "parallelogram-js",
    "framework",
    "progressive-enhancement"
  ],
  "license": "MIT",
  "sideEffects": [
    "./dist/components/*.js",
    "*.css"
  ],
  "exports": {
    ".": {
      "import": {
        "development": "./dist/dev/index.esm.js",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "development": "./dist/dev/index.cjs",
        "default": "./dist/index.cjs"
      }
    },
    "./components/*": "./dist/components/*.js",
    "./dev/components/*": "./dist/dev/components/*.js",
    "./core/*": "./dist/core/*.js",
    "./dev/core/*": "./dist/dev/core/*.js",
    "./styles": "./dist/styles/index.min.css"
  },
  "files": [
    "dist",
    "src",
    "docs",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "rollup": "^4.12.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.92.1",
    "serve": "^14.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parallelogram-dev/parallelogram-js.git"
  },
  "author": "PeptoLab"
}
